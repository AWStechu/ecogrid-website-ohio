{
  "family": "ecogrid-app",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::442042546183:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "ecogrid-container",
      "image": "<IMAGE1_NAME>",
      "portMappings": [
        {
          "containerPort": 5000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "DB_HOST",
          "value": "ecogrid-db.ckbygg2eq2ic.us-east-1.rds.amazonaws.com"
        },
        {
          "name": "DB_USER",
          "value": "admin"
        },
        {
          "name": "DB_PASSWORD",
          "value": "EcoGrid2025!"
        },
        {
          "name": "DB_NAME",
          "value": "ecogrid"
        },
        {
          "name": "COGNITO_USER_POOL_ID",
          "value": "us-east-1_72Z74NWLb"
        },
        {
          "name": "COGNITO_CLIENT_ID",
          "value": "2no7600re6tbrg5j384hssnbeh"
        },
        {
          "name": "COGNITO_CLIENT_SECRET",
          "value": "b8j29l10koohs94feon2rtn7092m35pvs2evqr9unisso5lvgk1"
        },
        {
          "name": "COGNITO_REGION",
          "value": "us-east-1"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ecogrid-app",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:5000/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
